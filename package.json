{
  "name": "lollipops",
  "version": "1.4.0",
  "description": "Lollipops React/Redux boilerplate",
  "author": "iZonder <izonder@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/izonder/lollipops.git"
  },
  "bugs": {
    "url": "https://github.com/izonder/lollipops/issues"
  },
  "homepage": "https://github.com/izonder/lollipops#readme",
  "scripts": {
    "start": "yarn && cross-env NODE_ENV=development webpack-dev-server --config ./webpack",
    "start:dev": "yarn && cross-env NODE_ENV=development DEV_TOOL=enable webpack-dev-server --config ./webpack",
    "build": "yarn && cross-env NODE_ENV=production webpack --config ./webpack",
    "docker": "yarn build && dimbu -r change-your-namespace/ -b ARG=nope",
    "test": "yarn lint",
    "lint": "yarn && eslint ."
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      "react-hot-loader/babel",
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-optional-chaining",
      "@babel/plugin-syntax-dynamic-import"
    ]
  },
  "pre-commit": [
    "lint"
  ],
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-proposal-optional-chaining": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/polyfill": "^7.4.0",
    "@babel/preset-env": "^7.4.0",
    "@babel/preset-react": "^7.0.0",
    "autoprefixer": "^9.4.6",
    "babel-loader": "^8.0.5",
    "bootstrap": "4.3.1",
    "classnames": "^2.2.5",
    "clean-webpack-plugin": "^2.0.0",
    "connected-react-router": "^6.2.2",
    "cross-env": "^5.0.5",
    "css-loader": "^2.1.0",
    "dimbu": "izonder/dimbu#v1.0.2",
    "eslint-config-standard": "izonder/eslint-config-standard#v3.0.7",
    "eslint-loader": "^2.0.0",
    "file-loader": "^3.0.1",
    "history": "^4.7.2",
    "html-loader": "^0.5.1",
    "html-webpack-plugin": "^3.2.0",
    "json-loader": "^0.5.7",
    "mini-css-extract-plugin": "^0.5.0",
    "moment": "^2.24.0",
    "node-sass": "^4.11.0",
    "postcss-loader": "^3.0.0",
    "pre-commit": "^1.2.2",
    "prop-types": "^15.5.10",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-hot-loader": "^4.6.3",
    "react-redux": "^6.0.0",
    "react-router-dom": "^5.0.0",
    "redux": "^4.0.0",
    "redux-devtools": "^3.5.0",
    "redux-devtools-dock-monitor": "^1.1.2",
    "redux-devtools-log-monitor": "^1.3.0",
    "redux-saga": "^1.0.0",
    "redux-thunk": "^2.2.0",
    "sass-loader": "^7.0.1",
    "style-loader": "^0.23.0",
    "uglifyjs-webpack-plugin": "^2.1.1",
    "url-loader": "^1.0.1",
    "webpack": "^4.29.0",
    "webpack-cli": "^3.2.1",
    "webpack-dev-server": "^3.1.14"
  }
}
