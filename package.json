{
  "name": "lollipops",
  "version": "1.2.1",
  "description": "Lollipops React/Redux boilerplate",
  "author": "iZonder <izonder@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/izonder/lollipops.git"
  },
  "bugs": {
    "url": "https://github.com/izonder/lollipops/issues"
  },
  "homepage": "https://github.com/izonder/lollipops#readme",
  "scripts": {
    "start": "yarn && cross-env NODE_ENV=development webpack-dev-server --config ./webpack",
    "start:dev": "yarn && cross-env NODE_ENV=development DEV_TOOL=enable webpack-dev-server --config ./webpack",
    "build": "yarn && cross-env NODE_ENV=production webpack --config ./webpack",
    "docker": "yarn build && dimbu -r change-your-namespace/ -b ARG=nope",
    "test": "yarn lint",
    "lint": "yarn && eslint ."
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "babel": {
    "presets": [
      "env",
      "stage-2",
      "react"
    ],
    "plugins": [
      "react-hot-loader/babel"
    ]
  },
  "pre-commit": [
    "lint"
  ],
  "devDependencies": {
    "autoprefixer": "^9.0.1",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "bootstrap": "4.1.3",
    "classnames": "^2.2.5",
    "clean-webpack-plugin": "^0.1.16",
    "cross-env": "^5.0.5",
    "css-loader": "^1.0.0",
    "dimbu": "izonder/dimbu#v1.0.2",
    "eslint-config-standard": "izonder/eslint-config-standard#v2.1.0",
    "eslint-loader": "^2.0.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^2.0.0",
    "html-loader": "^0.5.1",
    "html-webpack-plugin": "^3.2.0",
    "json-loader": "^0.5.7",
    "moment": "^2.20.0",
    "node-sass": "^4.5.3",
    "postcss-loader": "^3.0.0",
    "pre-commit": "^1.2.2",
    "prop-types": "^15.5.10",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-hot-loader": "^4.1.0",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.1.2",
    "react-router-redux": "^5.0.0-alpha.7",
    "redux": "^4.0.0",
    "redux-devtools": "^3.4.0",
    "redux-devtools-dock-monitor": "^1.1.2",
    "redux-devtools-log-monitor": "^1.3.0",
    "redux-saga": "^0.16.0",
    "redux-thunk": "^2.2.0",
    "sass-loader": "^7.0.1",
    "style-loader": "^0.23.0",
    "uglifyjs-webpack-plugin": "^1.2.7",
    "url-loader": "^1.0.1",
    "webpack": "^4.14.0",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.4"
  }
}
