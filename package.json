{
  "name": "lollipops",
  "version": "0.0.0",
  "description": "Lollipops React/Redux boilerplate",
  "author": "iZonder <izonder@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/izonder/lollipops.git"
  },
  "bugs": {
    "url": "https://github.com/izonder/lollipops/issues"
  },
  "homepage": "https://github.com/izonder/lollipops#readme",
  "scripts": {
    "start": "yarn && cross-env NODE_ENV=development webpack-dev-server --config ./webpack",
    "start:dev": "yarn && cross-env NODE_ENV=development DEV_TOOL=enable webpack-dev-server --config ./webpack",
    "build": "yarn && cross-env NODE_ENV=production webpack --config ./webpack",
    "docker": "yarn build && docker build --no-cache --pull -t lollipops .",
    "test": "yarn lint",
    "lint": "eslint ."
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "babel": {
    "presets": [
      "env",
      "stage-2",
      "react"
    ],
    "plugins": [
      "react-hot-loader/babel"
    ]
  },
  "pre-commit": [
    "lint"
  ],
  "dependencies": {
    "redux-saga": "^0.16.0"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.5",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "bootstrap": "4.0.0-beta",
    "classnames": "^2.2.5",
    "clean-webpack-plugin": "^0.1.16",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.5",
    "eslint-config-standard": "izonder/eslint-config-standard",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-react": "^7.3.0",
    "extract-text-webpack-plugin": "^3.0.1",
    "file-loader": "^1.1.5",
    "html-loader": "^0.5.1",
    "html-webpack-plugin": "^2.30.1",
    "json-loader": "^0.5.7",
    "node-sass": "^4.5.3",
    "postcss-loader": "^2.0.7",
    "pre-commit": "^1.2.2",
    "prop-types": "^15.5.10",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-hot-loader": "^3.0.0",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.1.2",
    "react-router-redux": "^5.0.0-alpha.7",
    "redux": "^3.7.2",
    "redux-devtools": "^3.4.0",
    "redux-devtools-dock-monitor": "^1.1.2",
    "redux-devtools-log-monitor": "^1.3.0",
    "redux-thunk": "^2.2.0",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.0",
    "url-loader": "^0.6.2",
    "webpack": "^3.7.1",
    "webpack-dev-server": "^2.7.1"
  }
}
